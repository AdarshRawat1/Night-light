{
    "name": "Dark Light",
    "version": "0.1" ,
    "manifest_version":3,
    "background.service_worker":{
        "scripts":[
            "popup.js"
        ],
        "persistent":true
    },
    "action":{
        "default_title":"Dark Light",
        "default_popup":"Pop_up.html",
        "default_icon":"Logo_128.png"
    },
    "icons":{
        "128":"Logo_128.png",
        "256":"Logo_256.png"
    },
    "permissions":[
    "activeTab",
    "https://*/*",
    "http://*/*",
    "tabs"
]
}